<h1>Listing customer_informations</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Date joined</th>
      <th>Email address</th>
      <th>Outstanding charges</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_informations.each do |customer_information| %>
      <tr>
        <td><%= customer_information.Customer_id %></td>
        <td><%= customer_information.Date_Joined %></td>
        <td><%= customer_information.Email_Address %></td>
        <td><%= customer_information.Outstanding_Charges %></td>
        <td><%= link_to 'Show', customer_information %></td>
        <td><%= link_to 'Edit', edit_customer_information_path(customer_information) %></td>
        <td><%= link_to 'Destroy', customer_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

